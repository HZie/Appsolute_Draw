<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39333335"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widget_layout_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">


        <ImageButton
            android:id="@+id/widget_imgBtn_motive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00747474"
            android:scaleType="fitCenter"
            android:src="@drawable/icon1" />

        <ImageButton
            android:id="@+id/widget_imgBtn_healing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00747474"
            android:scaleType="fitCenter"
            android:src="@drawable/icon2" />

        <ImageButton
            android:id="@+id/widget_imgBtn_boring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00747474"
            android:scaleType="fitCenter"
            android:src="@drawable/icon3" />

        <ImageButton
            android:id="@+id/widget_imgBtn_refresh"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00747474"
            android:scaleType="fitCenter"
            android:src="@drawable/icon4" />


    </LinearLayout>

</RelativeLayout>
